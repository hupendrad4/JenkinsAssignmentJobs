pipeline {
    agent {
        label 'masternodes'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout(
                    scm: git(
                        branches: [[name: 'refs/heads/main']],
                        url: 'https://github.com/hupendrad4/JenkinsAssignmentJobs.git'
                    )
                )
            }
        }      
        stage('Ansible Playbook Execution') {
            steps {
                sh 'ansible-playbook $WORKSPACE/hupendra.yml'
            }
        }
    }
}
