pipeline {
    agent {
        label 'masternodes'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[https://github.com/hupendrad4/JavaBasicPracticeCodes.git']]
                )
            }
        }      
        stage('Ansible Playbook Execution') {
            steps {
                sh 'ansible-playbook $WORKSPACE/hupendra.yml'
            }
        }
    }
}
