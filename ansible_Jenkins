pipeline {
    agent {
        label 'masternodes'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    extensions: [],
                    userRemoteConfigs: [[url: 'https://github.com/hupendrad4/JenkinsAssignmentJobs.git']]
                ])
            }
        }      
        stage('Ansible Playbook Execution') {
            steps {
                sh 'ansible-playbook $WORKSPACE/hupendra.yml'
            }
        }
    }
}
