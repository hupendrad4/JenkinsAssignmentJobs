def diplay_build_user(name) {
  echo "Build username: ${name}"
  return 0
}

def display_node_name(nodename) {
  echo "Node name: ${nodename}"
  return 0
}

pipeline {
  agent {
    label 'masternodes'
  }
  stages {
    stage("Env Build User") {
      steps {
        diplay_build_user(USER)
        display_node_name(NODE_NAME)
      }
    }
    stage("Env Node Name") {
      agent {
        label 'node1'
      }
      steps {
        diplay_build_user(USER)
        display_node_name(NODE_NAME)
      }
    }
  }
}
